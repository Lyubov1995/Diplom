@model WebClients.Models.RegisterViewModel

<link rel="stylesheet" href="/Acc/fonts/material-icon/css/iconic.min.css">
<link rel="stylesheet" href="/Acc/Account.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="/css/Scripts/inputmasks.js"></script>
<script src="/css/Scripts/Masks.js"></script>


<div style="padding: 50px;">
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Регистрация</h2>
                    <form method="POST" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Name" class="form-control" type="text" placeholder="Имя" id="register" maxlength="30" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Email" class="form-control" id="Email" type="text" placeholder="Электронная почта" maxlength="30" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                      <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-phone"></i></label>
                            <input asp-for="Phone" class="tel form-control" type="phone" placeholder="Телефон" id="mask-phone" maxlength="18" /> 
                            <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Password" class="form-control" id="password-input" type="password" placeholder="Пароль" maxlength="17"/>
                            <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>
                            <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="ConfirmPassword" class="form-control" id="password-input1" type="password" placeholder="Повторить пароль" maxlength="17"/>
                            <a href="#" class="password-control" onclick="return show_hide_password1(this);"></a>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    <div class="form-group form-button">
                        <button class="btn btn-primary form-control" type="submit" value="Submit">Зарегистрироваться</button>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/images/site/Reg.jpg" alt="sing up image"></figure>
                 <a href="@Url.Action("Login", "Account")" class="signup-image-link">Есть аккаунт? Войти!</a>
            </div>
        </div>
    </div>
</section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
