@model WebClients.Models.ForgotDataViewModel

<link rel="stylesheet" href="/Acc/fonts/material-icon/css/iconic.min.css">
<link rel="stylesheet" href="/Acc/Account.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="/css/Scripts/inputmasks.js"></script>
<script src="/css/Scripts/Masks.js"></script>

<div style="padding: 50px;">
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="/images/site/Auto.jpg" alt="sing up image"></figure>
                    <a href="@Url.Action("Login", "Account")" class="signup-image-link">Вернуться на страницу авторизации</a>
                </div>      
                <div class="signin-form">
                    <form method="post" class="register-form" id="login-form" asp-controller="Account" asp-route-Forgot="Forgot">
                          <h2 class="form-title">Восстановление пароля</h2>
                            <div id="modal-placeholder1"></div>
                            <div id="modDialog1" class="modal fade">
                            <div id="dialogContent1" class="modal-dialog"></div>
                          </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Email" class="form-control" id="Email" type="text" placeholder="Электронная почта" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Password" id="password-input" class="form-control" type="password" placeholder="Пароль" maxlength="17"/>
                            <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="ConfirmPassword" class="form-control" id="password-input1" type="password" placeholder="Повторить пароль" maxlength="17"/>
                            <a href="#" class="password-control" onclick="return show_hide_password1(this);"></a>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group form-button">
                                <input class="btn btn-primary form-control" value="Изменить" type="submit" asp-controller="Account" asp-action="ForgotPassword" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
